/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  background green
  transform: translateX(-120%) 
  transition 1.0s
  max-height: 0
  padding 0 !important
  &.order-enter-active
    max-height 60px
    background green
    transform: translateX(0) 
    padding 2rem 0 !important

.order-exit
  background red
  transition 1.0s
  transform: translateX(0)
  &.order-exit-active
    transform: translateX(120%)
    padding: 0


.count-enter
  background: black
  transition 1.0s
  transform translateY(100%)
  &.count-enter-active
    background: yellow
    transform translateY(0)

.count-exit
  background: green
  transform translateY(0)
  transition 1.0s
  position absolute
  left 0
  bottom 0
  &.count-exit-active 
    background green
    transform translateY(-100%)